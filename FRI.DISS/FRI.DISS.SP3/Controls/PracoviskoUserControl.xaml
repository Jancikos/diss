<UserControl x:Class="FRI.DISS.SP3.Controls.PracoviskoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FRI.DISS.SP3.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox x:Name="_grb_Header" Header="Workplace #0" MinWidth="150" Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <TextBlock x:Name="_txt_Order" Text="#1" />
            <TextBlock Grid.Column="1" x:Name="_txt_Nabytok" Text="Stol#5" Margin="5 0" />
            <TextBlock Grid.Column="2" x:Name="_txt_Status" Text="CakaNaRezanie" />


            <TextBlock Grid.Row="1" x:Name="_txt_StolariA" Text="A: 2" />
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="_txt_StolariB" Text="B: 3" Margin="5 0" />
            <TextBlock Grid.Row="1" Grid.Column="2" x:Name="_txt_StolariC" Text="C: 1" />
        </Grid>
    </GroupBox>
</UserControl>
